{% extends 'base.html.twig' %}

{% block contenu %}
	<div class="row">
		<div class="col-md-1">
			</div>
<div class="col-md-10">
	<div class="row">
		<div class="col-md-6">
		<h3>{{ stage.titre }}</h3>
	</div>
	<div class="col-md-3">
		<h3>{{ stage.entreprise.nom }}</h3>
	</div>
	<div class="col-md-3">
		<h3>
			{% for formation in stage.formations %}
				{{ formation.type }}
			{% endfor %}
		</h3>
	</div>
</div>
<div class="row">
		<div class="col-md-12">
			<p><br></p>
			</div>
		</div>
<div class="row elements-du-stage">
		<div class="col-md-6">
			<p>
				{{ stage.description }}
			</p>
		</div>
		<div class="col-md-6">
			<div class="row">
				<div class="col-md-6">
					<p>contact : {{ stage.contact }}</p>
				</div>
				<div class="col-md-6">
					<p>du {{ stage.dateDebut | date("d/m/Y") }} <br /> au {{ stage.dateFin | date("d/m/Y") }}</p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<p>{{ stage.entreprise.site }}</p>
				</div>
			</div>
		</div>
	</div>
</div>
	<div class="col-md-1">
	</div>
</div>
	
{% endblock %}
