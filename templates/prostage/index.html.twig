{% extends 'base.html.twig' %}

{% block contenu %}
<div class="row">
	<div class="col-md-1">
	</div>
	<div class="col-md-10">
		<div class="row">
			<div class="col-md-12">
				<h2>
					Liste des stages
				</h2>
			</div>
		</div>
		<div class="row liste-stages-titres">
			<div class="col-md-6">
				<h3>Nom</h3>
			</div>
			<div class="col-md-2">
				<h3>Entreprise</h3>
			</div>
			<div class="col-md-2">
				<h3>Formation</h3>
			</div>
			<div class="col-md-2">
				<h3>DurÃ©e</h3>
			</div>
		</div>
		<div class="row liste-stages">
			<div class="col-md-12">

				{% set numero = 'impair' %}
				{% for noStage, stage in listeStages %}
					<a href="/stages/{{ noStage }}">
						<div class="row stage-row-{{ numero }}">
						<div class="col-md-6 stage-col-impair">
							<p>{{ stage['nom'] }}</p>
						</div>
						<div class="col-md-2 stage-col-pair">
							<p>{{ stage['entreprise'] }}</p>
						</div>
						<div class="col-md-2 stage-col-impair">
							<p>{{ stage['formation'] }}</p>
						</div>
						<div class="col-md-2 stage-col-pair">
							<p>{{ stage['duree'] }}</p>
						</div>
					</div>
					</a>

					{% if numero == 'impair' %}
						{% set numero = 'pair' %}
					{% else %}
						{% set numero = 'impair' %}
					{% endif %}
				{% endfor %}
			</div>
		</div>
	</div>
	<div class="col-md-1">
	</div>
</div>
{% endblock %}